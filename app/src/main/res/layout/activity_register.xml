<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@drawable/bg">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/selectphoto_imageview_register" android:layout_gravity="center"
                android:maxHeight="150dp" android:maxWidth="150dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_select_photo_button"/>
        <Button
                android:text="Upload Image"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/selectphoto_button_register"
                android:background="@drawable/button_bg" android:layout_margin="10dp" android:gravity="center"
                android:layout_gravity="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/registerName"
                android:hint="Full Name" android:singleLine="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_edittext_register_login" android:textSize="24sp"
                android:padding="10dp" android:layout_margin="10dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress"
                android:ems="10"
                android:id="@+id/registerEmail"
                android:hint="Email" android:singleLine="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="" android:textSize="24sp"
                android:background="@drawable/rounded_edittext_register_login" android:padding="10dp"
                android:layout_margin="10dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/registerPassword"
                android:inputType="textPassword" android:hint="@string/prompt_password" android:singleLine="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="" android:background="@drawable/rounded_edittext_register_login"
                android:textSize="24sp" android:padding="10dp" android:layout_margin="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Register"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerRegisterBtn"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_bg"
                    android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColor="@color/colorAccent" android:textStyle="bold" android:layout_margin="10dp"/>
            <Button
                    android:text="Login"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content" android:id="@+id/btnRegister" android:layout_weight="1"
                    android:background="@drawable/button_bg" android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>