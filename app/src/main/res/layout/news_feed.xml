<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/layout" android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/line" android:layout_marginTop="0dp" android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" android:layout_marginBottom="0dp" android:layout_margin="2dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center"
            android:layoutAnimation="@anim/layout_animation_fall_down"
    >
        <ImageView
                android:layout_width="165dp"
                android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/profileImage" android:layout_weight="1" android:scaleType="centerCrop"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtName" android:layout_weight="1"
                android:gravity="center" android:text="Profile Name" android:layout_gravity="center"
                android:textSize="18sp" android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Left Team Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/leftTeamName" android:layout_weight="1"
                android:textSize="18sp" android:textColor="#E92064" android:gravity="center" android:padding="5dp"/>
        <TextView
                android:text="Right Team Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rightTeamName" android:layout_weight="1"
                android:gravity="center" android:textSize="18sp" android:textColor="#02BCD4" android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="106dp">
        <ImageView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:id="@+id/imageTeamLeft" android:layout_weight="1"
                android:background="#E92064" app:srcCompat="@mipmap/ic_launcher"/>
        <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/leftTeamPoint" android:layout_weight="1"
                android:gravity="center" android:background="#E91E63" android:textColor="#FFFFFF"
                android:textSize="50sp"/>
        <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/rightTeamPoint" android:layout_weight="1"
                android:gravity="center" android:background="#00BCD4" android:textColor="#FFFFFF"
                android:textSize="50sp"/>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:id="@+id/imageTeamRight" android:layout_weight="1"
                android:background="#02BCD4" app:srcCompat="@mipmap/ic_launcher"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/matchId" android:gravity="end"/>
</LinearLayout>