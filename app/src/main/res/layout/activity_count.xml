<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CountActivity">

    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnReset"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="160dp" app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.499"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSavePoint"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnReset" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="715dp"
            android:layout_height="395dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:background="#E91E63">
            <TextView
                    android:text="Red Team"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" android:id="@+id/txtPersonRight" android:layout_weight="1"
                    android:gravity="center" android:textSize="50dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/pointLeft" android:layout_weight="1"
                    android:layout_gravity="center" android:textSize="300sp"
                    android:gravity="bottom|center_horizontal"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:background="#2196F3">
            <TextView
                    android:text="Blue Team"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" android:id="@+id/txtPersonLeft" android:layout_weight="1"
                    android:gravity="center" android:textSize="50dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/pointRight" android:layout_weight="1"
                    android:layout_gravity="center" android:gravity="bottom|center_horizontal"
                    android:textSize="300dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>